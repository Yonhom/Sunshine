<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.sunshine.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.xuyonghong.sunshine.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xuyonghong.sunshine.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="com.xuyonghong.sunshine.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.xuyonghong.sunshine.MainActivity" />
        </activity>
        <activity android:name="com.xuyonghong.sunshine.SettingsActivity"
            android:label="@string/title_settings"
            android:parentActivityName="com.xuyonghong.sunshine.DetailActivity"> <!-- this declaration ensure that when
             the up button in SettingsActivity is pressed, it returns to DetailActivity -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.xuyonghong.sunshine.DetailActivity" />
        </activity>

        <!--register the self-defined weather content provider-->
        <provider
            android:authorities="com.xuyonghong.sunshine.app"
            android:name="com.xuyonghong.sunshine.data.WeatherProvider"
            android:enabled="true"
            android:exported="true"/>

    </application>



</manifest>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xuyonghong.sunshine">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/ForecastTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.xuyonghong.sunshine.MainActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_settings"
            android:parentActivityName=".MainActivity"
            android:theme="@style/SettingsTheme">

            <!--
      implicitly set the setting activity's theme to be
             DarkActionBar, then the action bar will be added on it
            -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.xuyonghong.sunshine.DetailActivity" />
        </activity>

        <!-- register the self-defined weather content provider -->
        <provider
            android:name=".data.WeatherProvider"
            android:authorities="com.xuyonghong.sunshine.app"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".service.SunshineService"
            android:exported="false"></service>

        <receiver android:name=".service.SunshineService$AlarmReceiver"
            android:enabled="true"/>
    </application>

</manifest>
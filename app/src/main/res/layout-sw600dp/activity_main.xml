<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    tools:context="com.xuyonghong.sunshine.MainActivity">

    <!--
    This layout is a two-pane layout for the Items master/detail flow.
    this fragment will be loaded and shown if the avtivity_main is loaded
    -->
    <fragment
        android:id="@+id/fragment_forecast"
        android:name="com.xuyonghong.sunshine.fragment.ForecastFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@android:layout/list_content" />

    <!-- this container is for detail fragment -->
    <FrameLayout
        android:id="@+id/weather_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4" />

</LinearLayout>